{
  "build": {
    "config_file": ".config"
  },
  "features": {
    "CONFIG_MIN_LOG_LEVEL": {
      "description": "Minimum log level for the application",
      "type": "string",
      "default": "INFO",
      "values": ["DEBUG", "INFO", "WARN", "ERROR"],
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/proc/subprocess.buildLogLevel",
      "major_class": "logging",
      "minor_class": "level"
    },
    "CONFIG_LOGGING_DIR": {
      "description": "Directory for log files",
      "type": "string",
      "default": "./logs",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/proc/subprocess.buildLogDir",
      "major_class": "logging",
      "minor_class": "path"
    },
    "CONFIG_USE_LIBXML2": {
      "description": "Enable libxml2 support for CAPEC parsing",
      "type": "bool",
      "default": true,
      "method": "build-tag",
      "major_class": "parsing",
      "minor_class": "xml"
    },
    "CONFIG_USE_SONIC": {
      "description": "Use Sonic JSON instead of original encoding/json",
      "type": "bool",
      "default": true,
      "method": "build-tag",
      "major_class": "parsing",
      "minor_class": "json"
    },
    "CONFIG_LOGGING_REFRESH": {
      "description": "Remove log directory first to ensure fresh logs",
      "type": "bool",
      "default": true,
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/proc/subprocess.buildLogRefresh",
      "major_class": "logging",
      "minor_class": "path"
    },
    "CONFIG_ACCESS_SERVERADDR": {
      "description": "Server address for access service",
      "type": "string",
      "default": "0.0.0.0:8080",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/cmd/access.buildServerAddr",
      "major_class": "access",
      "minor_class": "network"
    },
    "CONFIG_ACCESS_STATICDIR": {
      "description": "Static directory for access service",
      "type": "string",
      "default": "website",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/cmd/access.buildStaticDir",
      "major_class": "access",
      "minor_class": "path"
    },
    "CONFIG_PROC_INPUTFD": {
      "description": "File descriptor for RPC input",
      "type": "string",
      "default": "3",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/proc/subprocess.buildRPCInputFD",
      "major_class": "proc",
      "minor_class": "fd"
    },
    "CONFIG_PROC_OUTPUTFD": {
      "description": "File descriptor for RPC output",
      "type": "string",
      "default": "4",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/proc/subprocess.buildRPCOutputFD",
      "major_class": "proc",
      "minor_class": "fd"
    }
  }
}