{
  "build": {
    "config_file": ".config"
  },
  "features": {
        "CONFIG_BOOKMARK_DBPATH": {
          "description": "Database path for bookmarks and memory cards",
          "type": "string",
          "default": "bookmark.db",
          "method": "ldflags",
          "target": "github.com/cyw0ng95/v2e/pkg/notes.buildBookmarkDBPath",
          "major_class": "proc",
          "minor_class": "local"
        },
    "CONFIG_MIN_LOG_LEVEL": {
      "description": "Minimum log level for the application",
      "type": "string",
      "default": "INFO",
      "values": ["DEBUG", "INFO", "WARN", "ERROR"],
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/proc/subprocess.buildLogLevel",
      "major_class": "logging",
      "minor_class": "level"
    },
    "CONFIG_LOGGING_DIR": {
      "description": "Directory for log files",
      "type": "string",
      "default": "./logs",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/proc/subprocess.buildLogDir",
      "major_class": "logging",
      "minor_class": "path"
    },
    "CONFIG_USE_LIBXML2": {
      "description": "Enable libxml2 support for CAPEC parsing",
      "type": "bool",
      "default": true,
      "method": "build-tag",
      "major_class": "parsing",
      "minor_class": "xml"
    },
    "CONFIG_USE_SONIC": {
      "description": "Use Sonic JSON instead of original encoding/json",
      "type": "bool",
      "default": true,
      "method": "build-tag",
      "major_class": "parsing",
      "minor_class": "json"
    },
    "CONFIG_LOGGING_REFRESH": {
      "description": "Remove log directory first to ensure fresh logs",
      "type": "bool",
      "default": true,
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/proc/subprocess.buildLogRefresh",
      "major_class": "logging",
      "minor_class": "path"
    },
    "CONFIG_ACCESS_SERVERADDR": {
      "description": "Server address for access service",
      "type": "string",
      "default": "0.0.0.0:8080",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/cmd/access.buildServerAddr",
      "major_class": "access",
      "minor_class": "network"
    },
    "CONFIG_ACCESS_STATICDIR": {
      "description": "Static directory for access service",
      "type": "string",
      "default": "website",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/cmd/access.buildStaticDir",
      "major_class": "access",
      "minor_class": "path"
    },
    "CONFIG_PROC_AUTOEXIT": {
      "description": "If true, subprocess will gracefully exit when it detects the broker has exited",
      "type": "bool",
      "default": true,
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/proc/subprocess.buildProcAutoExit",
      "major_class": "proc",
      "minor_class": "lifecycle"
    },
    "CONFIG_PROC_UDS_BASEPATH": {
      "description": "Base path for Unix Domain Socket files for process RPC transports",
      "type": "string",
      "default": "/tmp/v2e_uds",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/proc/subprocess.buildProcUDSBasePath",
      "major_class": "proc",
      "minor_class": "comm"
    },
    "CONFIG_BROKER_DETECTBINS": {
      "description": "Enable automatic binary detection for broker processes",
      "type": "bool",
      "default": true,
      "method": "build-tag",
      "major_class": "broker",
      "minor_class": "process"
    },
    "CONFIG_BROKER_BOOTBINS": {
      "description": "Comma-separated list of binaries to boot when detect_bins is false",
      "type": "string",
      "default": "access,remote,local,meta,sysmon",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/cmd/broker.core.buildBootBins",
      "major_class": "broker",
      "minor_class": "process"
    },
    "CONFIG_CVE_DBPATH": {
      "description": "Database path for CVE data",
      "type": "string",
      "default": "cve.db",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/cve.buildCVEDBPath",
      "major_class": "proc",
      "minor_class": "local"
    },
    "CONFIG_CWE_DBPATH": {
      "description": "Database path for CWE data",
      "type": "string",
      "default": "cwe.db",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/cwe.buildCWEDBPath",
      "major_class": "proc",
      "minor_class": "local"
    },
    "CONFIG_CAPEC_DBPATH": {
      "description": "Database path for CAPEC data",
      "type": "string",
      "default": "capec.db",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/capec.buildCAPECDBPath",
      "major_class": "proc",
      "minor_class": "local"
    },
    "CONFIG_CWE_RAWPATH": {
      "description": "Raw path for CWE data",
      "type": "string",
      "default": "assets/cwe-raw.json",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/cwe.buildCWERawPath",
      "major_class": "proc",
      "minor_class": "local"
    },
    "CONFIG_CAPEC_XMLPATH": {
      "description": "XML path for CAPEC data",
      "type": "string",
      "default": "assets/capec_contents_latest.xml",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/capec.buildCAPECXMLPath",
      "major_class": "proc",
      "minor_class": "local"
    },
    "CONFIG_CAPEC_XSDPATH": {
      "description": "XSD path for CAPEC data",
      "type": "string",
      "default": "assets/capec_schema_latest.xsd",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/capec.buildCAPECXSDPath",
      "major_class": "proc",
      "minor_class": "local"
    },
    "CONFIG_CAPEC_XSDENABLED": {
      "description": "Enable XSD validation for CAPEC data",
      "type": "bool",
      "default": false,
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/capec.buildXSDValidation",
      "major_class": "proc",
      "minor_class": "local"
    },
    "CONFIG_SESSION_DBPATH": {
      "description": "Database path for session data",
      "type": "string",
      "default": "session.db",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/meta.buildSessionDBPath",
      "major_class": "proc",
      "minor_class": "meta"
    },
    "CONFIG_CWE_VIEWURL": {
      "description": "URL for fetching CWE view data",
      "type": "string",
      "default": "https://github.com/CWE-CAPEC/REST-API-wg/archive/refs/heads/main.zip",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/cwe.buildViewURL",
      "major_class": "proc",
      "minor_class": "remote"
    },
    "CONFIG_LEARNING_DBPATH": {
      "description": "Database path for learning progress tracking",
      "type": "string",
      "default": "./learning.db",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/cve.local.buildLearningDBPath",
      "major_class": "proc",
      "minor_class": "local"
    },
    "CONFIG_BROKER_UDS_BASEPATH": {
      "description": "Base path for Unix Domain Socket files for broker transport manager",
      "type": "string",
      "default": "/tmp/v2e_uds",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/cmd/broker/transport.manager.buildUDSBasePath",
      "major_class": "broker",
      "minor_class": "transport"
    },
    "CONFIG_OPTIMIZER_BATCH": {
      "description": "Batch size for message batching",
      "type": "int",
      "default": 1,
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/cmd/broker/main.buildOptimizerBatch",
      "major_class": "broker",
      "minor_class": "optimizer"
    },
    "CONFIG_OPTIMIZER_BUFFER": {
      "description": "Message channel buffer capacity for the broker optimizer",
      "type": "int",
      "default": 1000,
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/cmd/broker/main.buildOptimizerBuffer",
      "major_class": "broker",
      "minor_class": "optimizer"
    },
    "CONFIG_OPTIMIZER_FLUSH": {
      "description": "Flush interval for message batching (milliseconds)",
      "type": "int",
      "default": 10,
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/cmd/broker/main.buildOptimizerFlush",
      "major_class": "broker",
      "minor_class": "optimizer"
    },
    "CONFIG_OPTIMIZER_POLICY": {
      "description": "Offer policy for message handling when buffer is full (drop, wait, or reject)",
      "type": "string",
      "default": "drop",
      "values": ["drop", "wait", "reject"],
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/cmd/broker/main.buildOptimizerPolicy",
      "major_class": "broker",
      "minor_class": "optimizer"
    },
    "CONFIG_OPTIMIZER_WORKERS": {
      "description": "Number of worker goroutines for message processing",
      "type": "int",
      "default": 4,
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/cmd/broker/main.buildOptimizerWorkers",
      "major_class": "broker",
      "minor_class": "optimizer"
    }
  }
}
