{
  "build": {
    "config_file": ".config"
  },
  "features": {
    "CONFIG_MIN_LOG_LEVEL": {
      "description": "Minimum log level for the application",
      "type": "string",
      "default": "INFO",
      "values": ["DEBUG", "INFO", "WARN", "ERROR"],
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/proc/subprocess.buildLogLevel",
      "major_class": "logging",
      "minor_class": "level"
    },
    "CONFIG_LOGGING_DIR": {
      "description": "Directory for log files",
      "type": "string",
      "default": "./logs",
      "method": "ldflags",
      "target": "github.com/cyw0ng95/v2e/pkg/proc/subprocess.buildLogDir",
      "major_class": "logging",
      "minor_class": "path"
    },
    "CONFIG_USE_LIBXML2": {
      "description": "Enable libxml2 support for CAPEC parsing",
      "type": "bool",
      "default": true,
      "method": "build-tag",
      "major_class": "parsing",
      "minor_class": "xml"
    },
    "CONFIG_USE_SONIC": {
      "description": "Use Sonic JSON instead of original encoding/json",
      "type": "bool",
      "default": true,
      "method": "build-tag",
      "major_class": "parsing",
      "minor_class": "json"
    }
  }
}